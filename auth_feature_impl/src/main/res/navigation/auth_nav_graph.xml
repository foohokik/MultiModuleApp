<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@id/loginFragment"
        android:name="com.example.auth_feature_impl.presentation.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">

        <deepLink
            android:id="@+id/LoginDeepLink"
            app:uri="app://login" />
        <action
            android:id="@+id/action_loginFragment_to_pinFragment"
            app:destination="@id/pinFragment" />
    </fragment>
    <fragment
        android:id="@+id/pinFragment"
        android:name="com.example.auth_feature_impl.presentation.pin.PinFragment"
        android:label="fragment_pin"
        tools:layout="@layout/fragment_pin" >
    <argument
        android:name="email"
        app:argType="string" />
    </fragment>

</navigation>